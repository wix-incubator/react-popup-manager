{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "noUnusedLocals": true,
    "jsx": "react",
    "lib": ["dom", "es2016"],
    "declaration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.spec.tsx"
  ],
  "exclude": [
    "./src/tests/**"
  ],
  "files": [
    "./src/index.ts"
  ]
}
